---
import { getCollection } from "astro:content";
import UserCard from "src/components/UserCard.astro";
import { siteConfig } from "src/config/site-config";
import BlogLayout from "src/layouts/BlogLayout.astro";

const authors = await getCollection("author");

console.log('authors', authors)
---

<BlogLayout title="Rodrigo's Blog">
  <section class="bg-white dark:bg-gray-900">
    <div class="container px-6 py-10 mx-auto">
      <h1
        class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white"
      >
        {siteConfig.title}
      </h1>

      <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
        {authors.map((author) => <UserCard author={author}/>)}
      </div>
    </div>
  </section>
</BlogLayout>
